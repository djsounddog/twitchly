<p id="notice"><%= notice %></p>

<h1><%= t :links_index_heading %></h1>
<%= link_to t(:new), new_link_path %>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.url %></td>
        <td><%= link_to t(:show), link %></td>
        <td><%= link_to t(:edit), edit_link_path(link) %></td>
        <td><%= link_to t(:destroy), link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>